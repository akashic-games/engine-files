{
  "name": "@akashic/engine-files",
  "version": "3.6.8",
  "description": "A library that manages versions of libraries related to Akashic Engine",
  "main": "index.js",
  "scripts": {
    "build": "ts-node scripts/build.ts",
    "update-changelog": "node scripts/updateChangelog.js",
    "update-expected": "ts-node scripts/updateExpected.ts",
    "test": "run-p test:*",
    "test:reftest": "jest",
    "test:md": "remark ./*.md --frail --no-stdout --quiet --rc-path ./.remarkrc"
  },
  "keywords": [],
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/engine-files.git"
  },
  "files": [
    "src",
    "dist",
    "index.js",
    "index.d.ts"
  ],
  "publishConfig": {
    "@akashic:registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@akashic/akashic-engine": "3.11.0",
    "@akashic/amflow": "3.1.0",
    "@akashic/amflow-util": "1.2.0",
    "@akashic/game-configuration": "1.10.0",
    "@akashic/game-driver": "2.13.0",
    "@akashic/pdi-browser": "2.4.4",
    "@akashic/pdi-common-impl": "1.2.0",
    "@akashic/pdi-types": "1.7.0",
    "@akashic/playlog": "3.1.0",
    "@akashic/trigger": "1.0.1"
  },
  "devDependencies": {
    "@akashic/headless-akashic": "^4.0.0",
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@types/jest": "^29.0.0",
    "@types/pixelmatch": "^5.2.4",
    "@types/pngjs": "^6.0.1",
    "babelify": "^10.0.0",
    "canvas": "^2.11.0",
    "jest": "^29.0.0",
    "npm-check-updates": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^5.3.0",
    "pngjs": "^6.0.0",
    "remark-cli": "^11.0.0",
    "remark-lint": "^9.1.1",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^5.0.0",
    "uglify-js": "^3.15.5"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "<rootDir>/tests/*.spec.ts"
    ],
    "testTimeout": 10000
  }
}
